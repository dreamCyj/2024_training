# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /dbTest                     controllers.HomeController.dbTest
GET     /login                      controllers.HomeController.login()
GET     /register                   controllers.HomeController.register()
GET     /logout                     controllers.HomeController.logout()
GET     /getTasks/:id               controllers.TaskController.getTasks(id: Int)
POST    /delTask/:id                controllers.TaskController.delTask(id: Int)
POST    /validateLogin              controllers.HomeController.validateLogin
POST    /validateLoginForm          controllers.HomeController.validateLoginForm
POST    /createUser                 controllers.HomeController.createUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
